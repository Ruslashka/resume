<main>
    <div class="row">
        {{#with main}}
        <div class="col-3">
            <div class="card m-4">
                <section>
                    {{> title data="My educations" big=true }}
                    <ul class="ps-5 list-group list-group-flush">
                        {{#each educations}}
                        <div class="alert alert-info">
                            <li class="list-group-item">
                                {{name}}
                                {{#unless isEnd}} (ще в процесі) {{/unless}}
                            </li>
                        </div>
                        {{/each}}
                    </ul>
                </section>
            </div>
        </div>

        <div class="col-4 m-4">
            <section>
                {{> title data="My certificates"}}
                <ul class="ps-5 list-group list-group-flush">
                    {{#each certificates}}
                    <div class="alertalert-success">
                        <li class="list-group-item">{{name}} ({{id}})</li>
                    </div>
                    {{/each}}
                </ul>
            </section>
        </div>
        {{/with}}
    </div>
</main>