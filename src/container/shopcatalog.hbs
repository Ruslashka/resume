<main class="p-5">
    <div class="col-12">
        {{#with navigation}}
        <div class="card m-0">
            <ul class="nav">
                {{#each links}}
                <li class="nav-item pi-1"><a class="nav-link" href="{{href}}">{{text}}</a></li>
                {{/each}}
                <li class="nav-item pl-1"><a class="nav-link disabled" href="#">Disabled</a></li>
            </ul>
        </div>
        {{/with}}
    </div>

    <div class="row">
        {{#each breadcrumb}}
        <div class="col-1 mt-5">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="{{url}}">{{name}}</a></li>
                {{!--
                {{#if url}}
                <li class="breadcrumb-item active" aria-current="page">{{name}}</li>
                {{/if}} --}}
            </ol>
        </div>
        {{/each}}
    </div>

    <h1 class="mt-5 mb-4">{{header}}</h1>

    <div class="row">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>


    <div class="row">
        <div class="col-4">
            <div class="card mt-5">
                {{#with filterBlock}}
                {{#with sellers}}
                <div class="p-3">
                    <h6>{{title}}</h6>
                    {{#each list}}
                    <div class="form-check">
                        <label class="form-check-label">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}

                    <hr>

                    {{#with brands}}
                    <h6>{{title}}</h6>
                    {{#with input}}
                    <input class="mb-2 col-5" placeholder="{{placeholder}}">
                    {{/with}}

                    {{#each options}}
                    <div class="form-check mt-2">
                        <label class="form-check-label">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                        <input type="checkbox" class="form-check-input">
                        <input type="checkbox" class="form-check-input">
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}

                    <hr>

                    {{#with price}}
                    <h6>{{title}}</h6>
                    {{#with range}}
                    <div class="mt-3"><input placeholder="{{from}}"></div>
                    <div class="mt-3"><input placeholder="{{to}}"></div>
                    {{/with}}
                    {{#with button}}
                    <a class="btn btn-outline-secondary mt-3" href="{{link}}">{{text}}</a>
                    {{/with}}
                    {{/with}}

                    {{#each filterList}}
                    <hr>
                    <h6>{{title}}</h6>
                    {{#each options}}
                    <div class="form-ckeck mt-2 mb-2">
                        <label class="form-check-label">{{value}}
                        </label>
                        <input type="checkbox" class="form-chek-input">
                    </div>
                    {{/each}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>


        <div class="col-8">
            <div class="row">
                {{#each goodsList}}
                <div class="card col-6 mt-5">
                    <img src="{{img}}" alt="photo">
                    <div>
                        {{#if isHot}}
                        <div class="badge text-bg-warning rounded-pill">HOT!</div>
                        {{/if}}
                        {{#if idNew}}
                        <div class="badge text-bg-primary rounded-pill">Нове!</div>
                        {{/if}}
                    </div>
                    <div>
                        {{#if isFast}}
                        <div class="badge text-bg-success">Швидка доставка</div>
                        {{/if}}
                        {{#if isFree}}
                        <div class="badge text-bg-secondary">Безкоштовна доставка</div>
                        {{/if}}
                    </div>
                    <div class="card-body  m-3">
                        <h6 class="mt-3 mb-3">{{name}}</h6>
                        {{#with review}}
                        <p class="mt-3 mb-2">{{amount}} {{text}}</p>
                        {{/with}}
                        <h4 class="mt-2 mb-2">{{price}}</h4>
                        <p>{{delivery}}</p>
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <div class="mt-1 mb-1"><a class="btn btn-primary" href="{{link}}">{{text}}</a></div>
                        {{/if}}
                        {{#if isSecondary}}
                        <div class="mb-4"><a class="btn btn-secondary" href="{{link}}">{{text}}</a></div>
                        {{/if}}
                        {{/each}}
                        {{#each characteristics}}
                        <ul>
                            <li>
                                {{title}}: {{value}}
                            </li>
                        </ul>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        {{#with service}}
        <div class="card mt-5 text-center bg-success">
            <h2 class="m-2">{{title}}</h2>
            <p class="m-3">{{description}}</p>
            {{#each buttons}}
            <div class="mb-3"><a class="btn btn-primary" href="{{link}}">{{text}}</a></div>
            {{/each}}
        </div>
    </div>
    {{/with}}

    <hr class="mt-5">

    <div class="row">
        {{#each footer}}
        <div class="nav col-2">
            <div>
                {{#each this}}
                <div>
                    <a class="nav-1" href="{{link}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>


</main>