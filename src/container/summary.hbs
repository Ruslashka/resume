{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main class="p-5">


    <div class="row">
        <div class="col-6">
            {{#with main}}
            {{> title data=summary.title big=true}}
            <div class="card p-2 bg-info">
                <p>
                    {{summary.text}}
                </p>
            </div>
        </div>

        <div class="col-6">
            {{#with experience}}
            {{> title data=title}}

            <div class="card mt-5 p-2 bg-info">
                <p>
                    {{text}}
                </p>
            </div>

            {{/with}}
        </div>
        {{/with}}
    </div>

</main>

