<main class="p-5">
    <div class="col-8">
        {{#with navigation}}
        <div class="card m-0">
            <ul class="nav">
                {{#each links}}
                <li class="nav-item  pl-1"><a class="nav-link" href="{{href}}">{{text}}</a></li>
                {{/each}}
            </ul>
        </div>
        {{/with}}
    </div>

    <h1 class="mt-5">Оформлення замовлення</h1>
    {{#with contacts_data}}
    <h3 class="mt-5">{{title}}</h3>

    <div class="mt-3">
        {{#each buttons}}
        {{#if isPrimary}}
        <button class="btn btn-warning me-2">{{text}}</button>
        {{/if}}
        {{#if isOutline}}
        <button class="btn btn-outline-warning">{{text}}</button>
        {{/if}}
        {{/each}}
    </div>

    {{#with form}}
    {{#with input}}
    <div class="row mt-4">
        <div class="col-5">
            {{#with surname}}
            <label class="form label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form text">{{caption}}</div>
            {{/with}}
        </div>

        <ol class="col-5">
            {{#with name}}
            <label class="form label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form text">{{caption}}</div>
            {{/with}}
        </ol>

        <div class="col-5 mt-3">
            {{#with phone}}
            <label class="form label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form text">{{caption}}</div>
            {{/with}}
        </div>

        <div class="col-5 mt-3">
            {{#with email}}
            <label class="form label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form text">{{caption}}</div>
            {{/with}}
        </div>
    </div>
    {{/with}}


    <hr class="col-10">

    {{#each switch}}
    <div class="col-3 mt-3">
        <div class="form-check form-switch">
            <label class="form-check-label">{{text}}</label>
            <input type="checkbox" class="form-check-input">
        </div>

    </div>
    {{/each}}
    {{/with}}
    {{/with}}

    <div class="row">
        <div class="card col-2">
            {{#each action_block}}
            {{#if isSuccess}}
            <button class="btn btn-success">{{text}}</button>
            {{/if}}
            {{#if isDanger}}
            <button class="btn btn-success btn-sm">{{text}}</button>
            {{/if}}
            {{#if isInfo}}
            <div><button class="btn btn-success btn-sm">{{text}}</button></div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</main>