<main class="p-5">
    <div class="col-12">
        {{#with navigation}}
        <div class="card m-0">
            <ul class="nav">
                {{#each links}}
                <li class="nav-item  pl-1"><a class="nav-link" href="{{href}}">{{text}}</a></li>
                {{/each}}
                <li class="nav-item pl-1"><a class="nav-link disabled" href="#">Disabled</a></li>
            </ul>
        </div>
        {{/with}}
    </div>

    <div class="mt-5">
        {{#with header}}
        <h1>{{title}}</h1>
        {{#with button}}
        <a href="{{link}}" class=" mt-3 btn btn-outline-secondary">{{text}}</a>
        {{/with}}
        {{/with}}
    </div>

    <hr>


    {{#each goodsBlock}}
    <div class="card col-12">
        <div>
            <img class="col-2" src="{{image}}">
            <h6 class="col-2">{{name}}</h6>
            <p class="col-2">{{description}}</p>
            {{#with price}}
            <em class="col-2">{{title}}</em>
            <em class="col-2">{{value}}</em>
            {{/with}}
        </div>
    </div>
    {{/each}}

</main>