<main class="p-5">
    <div class="col-12">
        {{#with navigation}}
        <div class="card m-0">
            <ul class="nav">
                {{#each links}}
                <li class="nav-item  pl-1"><a class="nav-link" href="{{href}}">{{text}}</a></li>
                {{/each}}
                <li class="nav-item pl-1"><a class="nav-link disabled" href="#">Disabled</a></li>
            </ul>
        </div>
        {{/with}}
    </div>

    <div class="mt-5">
        {{#with header}}
        <h1>{{title}}</h1>
        {{#with button}}
        <a href="{{link}}" class=" mt-3 btn btn-outline-secondary">{{text}}</a>
        {{/with}}
        {{/with}}
    </div>

    <hr>


    {{#each goodsBlock}}
    <div class="p-1 card my-3">
        <div class="row">
            <img class="col-2" src="{{image}}" alt="photos">
            <div class="col-6">
                <p class="h3">{{name}}</p>
                <p>{{description}}</p>
            </div>
            <div class="col-1 gy-5">
                {{#with price}}
                <strong class="h4">{{title}}</strong>
                <p class="h6">{{value}}</p>
                {{/with}}
            </div>
            <div class="col-1 mt-5">{{amount}}</div>

            <div class="col-2">
                {{#each buttons}}
                <div class="row mx-1">
                    <button
                        class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}} col-4 gy-4 gx-1">{{text}}</button>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/each}}

    <hr class="mt-5 mb-5">

    {{#with total}}
    <div class="row">
        <div class="col-7">
            <p class="h3 mt-3">{{title}}</p>
            <p class="h1 mt-3">{{amount}}</p>
            <p class="mt-2">{{delivery}}</p>
        </div>
        {{#each buttons}}
        <div class="row">
            <a href="{{link}}"
                class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success{{/if}} col-2 mt-3">{{text}}</a>
        </div>
    </div>
    {{/each}}
    {{/with}}

    <hr class="mt-5 mb-4">

    <div class="row">
        {{#with goodsOtherBlock}}
        <h2 class="text-center mb-3">{{title}}</h2>
        {{#each cards}}
        <div class="card col-4">
            <img class="card-img-top" src="{{image}}" alt="">
            <div>
                <h5>{{title}}
                    {{#if isHot}}
                    <div class="badge text-bg-warning rounded-pill">HOT!</div>
                    {{/if}}
                    {{#if idNew}}
                    <div class="badge text-bg-primary rounded-pill">Нове!</div>
                    {{/if}}
                </h5>
                <p>{{description}}</p>
            </div>
        </div>
        {{/each}}
        {{/with}}
    </div>

    <hr class="mt-5 mb-5">

    <div class="row">
        <div class="card text-bg-dark">
            {{#with subscribe}}
            <h2 class="mb-3 mt-2">{{header}}</h2>
            <p class="mb-4">{{description}}</p>
            {{#each buttons}}
            <a class="btn btn-primary mt-2 mb-2 col-1" href="{{link}}">{{text}}</a>
            {{/each}}
            {{/with}}
        </div>
    </div>

   <hr class="mt-5">

    <div class="row g-5">

        {{#each footer}}
        <div class="nav col-2">
            <div>
                {{#each this}}
                <div>
                    <a class="nav-1" href="{{link}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>

</main>
